<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.manager.addProducts_PostsFragment">


<EditText
        android:id="@+id/editTextProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:inputType="textCapSentences"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnUploadPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextProductName"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Upload Photo" />

    <ImageView
        android:id="@+id/imageViewSelectedPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/btnUploadPhoto"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/upload" />

    <EditText
        android:id="@+id/editTextProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:inputType="numberDecimal"
        android:layout_below="@+id/imageViewSelectedPhoto"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextProductPrice"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:text="Add Product" />
</RelativeLayout>
